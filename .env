# STS API Configuration

# API Security (Optional but Recommended)
# Set this to enable API key authentication
STS_API_KEY=sts-secret-key-12345

# Model Configuration
# Whisper model size: tiny, base, small, medium, large
STT_MODEL=base

# File Upload Limits
# Maximum file size in MB
MAX_FILE_SIZE_MB=10

# Performance
# Set to "false" to disable eager model loading (load on first request)
EAGER_LOAD=true

# Server Configuration
# Port for the API server
PORT=8000

# Logging
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
